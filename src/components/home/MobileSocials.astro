---
const socials = [
  {
    name: 'GitHub',
    url: 'https://github.com/randymfournier',
    icon: 'i-uil-github',
  },
  {
    name: 'LinkedIn',
    url: 'https://www.linkedin.com/in/randymfournier/',
    icon: 'i-uil-linkedin',
  },
  {
    name: 'Medium',
    url: 'https://medium.com/@randy.m.fournier',
    icon: 'i-uil-medium-m',
  },
];
---

<section class='md:hidden'>
  <h2 class='hidden'>Socials section</h2>
  <ul class='flex justify-between'>
    {
      socials.map((item) => (
        <li class='bg-white px-4 py-2 text-green border-black border-2 rounded card-shadow'>
          <a href={item.url} target='_blank' title={`Go to ${item.name}`}>
            <div class:list={[item.icon, 'p-6']} />
          </a>
        </li>
      ))
    }
  </ul>
</section>
